<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:measureWithLargestChild="false"
    android:nestedScrollingEnabled="false"
    android:touchscreenBlocksFocus="false"
    android:layout_gravity="center_horizontal"
    android:dividerPadding="@dimen/abc_button_padding_vertical_material">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/btn_spotify_streamer"
        android:layout_gravity="center_horizontal"
        android:background="@color/portfolio_btn_colours"
        android:layout_marginTop="@dimen/abc_text_size_small_material"
        android:clickable="true"
        android:onClick="onClick_SpotifyStreamerApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/btn_scores_app"
        android:background="@color/portfolio_btn_colours"
        android:layout_marginTop="@dimen/abc_text_size_small_material"
        android:onClick="onClick_ScoresApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/btn_library_app"
        android:background="@color/portfolio_btn_colours"
        android:layout_marginTop="@dimen/abc_text_size_small_material"
        android:onClick="onClick_LibraryApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/btn_build_it_bigger"
        android:layout_marginTop="@dimen/abc_text_size_small_material"
        android:background="@color/portfolio_btn_colours"
        android:onClick="onClick_BuildItBiggerApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/btn_xyz_reader"
        android:background="@color/portfolio_btn_colours"
        android:layout_marginTop="@dimen/abc_text_size_small_material"
        android:onClick="onClick_XYZReaderApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/but_capstone_my_own_app"
        android:layout_marginTop="@dimen/abc_text_size_small_material"
        android:background="@color/portfolio_btn_colours"
        android:onClick="onClick_CapstoneApp" />

</TableLayout>
